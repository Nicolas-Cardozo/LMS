CREATE DATABASE LMS
USE LMS
CREATE TABLE Pessoa
(
login int Identity(1,1)NOT NULL,
Nome varchar(20)NOT NULL,
Email varchar(30)NOT NULL,
Celular int NOT NULL,
Senha int NOT NULL,
DtExpiração datetime NOT NULL,
Constraint pkPessoa PRIMARY KEY(login)
);

CREATE TABLE Aluno
(
Foto image NOT NULL,
RA int Identity(1,1)NOT NULL,
Constraint pkAluno PRIMARY KEY(RA),
Constraint fkAluno FOREIGN KEY(login),
References Pessoa(login)
);

CREATE TABLE Professor
(
Apelido varchar(20) NOT NULL,
ID_Professor int Identity(1,1) NOT NULL,
Constraint pkProfessor PRIMARY KEY(ID_Professor),
Constraint fkProfessor FOREIGN KEY(login),
References Pessoa(login)
)

CREATE TABLE Coordenador
(
ID_Coordenador int Identity(1,1) NOT NULL,
Constraint pkCoordenador PRIMARY KEY(ID_Coordenador),
Constraint fkCoordenador FOREIGN KEY(login),
References Pessoa(login)
)
